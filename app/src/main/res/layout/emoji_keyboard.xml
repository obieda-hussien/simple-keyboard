<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical" >

    <!-- Emoji search bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp" >

        <EditText
            android:id="@+id/emoji_search"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Search emojis..."
            android:background="@drawable/search_background"
            android:padding="12dp"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/emoji_search_clear"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_clear"
            android:background="@drawable/button_selector"
            android:contentDescription="Clear search"
            android:scaleType="centerInside"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Category tabs -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingTop="4dp"
        android:paddingBottom="4dp" >

        <LinearLayout
            android:id="@+id/emoji_category_tabs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />
    </HorizontalScrollView>

    <!-- Container for switching between emoji grid and alphabet keyboard -->
    <FrameLayout
        android:id="@+id/emoji_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Emoji grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/emoji_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:maxHeight="300dp"
            android:padding="4dp"
            android:visibility="visible" />

        <!-- Alphabet keyboard for search -->
        <rkr.simplekeyboard.inputmethod.keyboard.MainKeyboardView
            android:id="@+id/emoji_search_keyboard"
            android:layoutDirection="ltr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>