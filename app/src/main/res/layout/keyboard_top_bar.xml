<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingStart="6dp"
    android:paddingEnd="6dp"
    android:gravity="center_vertical" >

    <!-- Toggle button - Gboard style, left-most position -->
    <ImageButton
        android:id="@+id/top_bar_toggle_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_expand_more"
        android:background="@drawable/button_selector"
        android:contentDescription="Toggle suggestions"
        android:layout_marginEnd="8dp"
        android:scaleType="centerInside"
        android:padding="8dp" />

    <!-- Emoji button -->
    <ImageButton
        android:id="@+id/top_bar_emoji_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_emoji"
        android:background="@drawable/button_selector"
        android:contentDescription="Emoji keyboard"
        android:layout_marginEnd="6dp"
        android:scaleType="centerInside"
        android:padding="8dp" />

    <!-- Clipboard button -->
    <ImageButton
        android:id="@+id/top_bar_clipboard_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_clipboard"
        android:background="@drawable/button_selector"
        android:contentDescription="Clipboard"
        android:layout_marginEnd="6dp"
        android:scaleType="centerInside"
        android:padding="8dp" />

    <!-- Spacer -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <!-- Settings button -->
    <ImageButton
        android:id="@+id/top_bar_settings_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_settings"
        android:background="@drawable/button_selector"
        android:contentDescription="Settings"
        android:scaleType="centerInside"
        android:padding="8dp" />

</LinearLayout>